# FILE MANAGED BY PUPPET. ALL MANUAL CHANGES WILL BE OVERWRITTEN.

includedir /var/lib/sss/pubconf/krb5.include.d/

[libdefaults]
  default_realm = <%= scope['ipa::final_realm'] %>
  dns_lookup_realm = false
  dns_lookup_kdc = false
  rdns = false
  ticket_lifetime = 24h
  forwardable = true
  udp_preference_limit = 0
  default_ccache_name = KEYRING:persistent:%{uid}


[realms]
  <%= scope['ipa::final_realm'] %> = {
    kdc = <%= scope['ipa::ipa_master_fqdn'] %>:88
    master_kdc = <%= scope['ipa::ipa_master_fqdn'] %>:88
    admin_server = <%= scope['ipa::ipa_master_fqdn'] %>:749
    default_domain = <%= scope['ipa::domain'] %>
    pkinit_anchors = FILE:/etc/ipa/ca.crt

  }

[domain_realm]
  .<%= scope['ipa::domain'] %> = <%= scope['ipa::final_realm'] %>
  <%= scope['ipa::domain'] %> = <%= scope['ipa::final_realm'] %>

